# EditorConfig: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
indent_style = space
insert_final_newline = true
charset = utf-8
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true

[*.py]
indent_size = 4
quote_type = single

[*.{yml,yaml,js,vue,scss,css,json,html}]
indent_size = 2
tab_width = 2

[*.diff]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.md]
max_line_length = 120
